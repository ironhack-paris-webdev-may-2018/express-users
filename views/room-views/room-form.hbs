<h2>Add a Room</h2>

<form method="POST" action="/process-room">
  <label>
    Name:
    <input type="text" name="name" placeholder="Studio Cosy Only 10 Minutes from Paris" />
  </label>
  <br />

  <label>
    Description:
    <input type="text" name="description" placeholder="Near metro station Blah" />
  </label>
  <br />

  <label>
    Picture URL:
    <input type="text" name="pictureUrl" placeholder="http://example.com/room.jpg" />
  </label>
  <br />

  <!-- user will type here but we won't save this string -->
  <label>
    Location:
    <input type="text" class="location-input" placeholder="Champs-ElysÃ©es" />
  </label>
  <br />

  <!-- values for these will be set by our Place Autocomplete -->
  <input type="hidden" name="latitude" class="lat-input" />
  <input type="hidden" name="longitude" class="long-input" />

  <button>Save This Room</button>
</form>
